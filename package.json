{
  "name": "quicker-use",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main/index.js",
  "description": "A minimalist, mouse-first efficiency tool for Windows & Mac.",
  "author": "QuickerUse Team",
  "scripts": {
    "dev": "chcp 65001 && vite",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "build:mac": "vite build && electron-builder --mac",
    "build:linux": "vite build && electron-builder --linux",
    "preview": "vite preview"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "element-plus": "^2.4.4",
    "iconv-lite": "^0.7.1",
    "lowdb": "^7.0.1",
    "pinia": "^2.1.7",
    "qrcode": "^1.5.4",
    "robotjs": "^0.6.0",
    "vue": "^3.3.11"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "sass": "^1.69.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^1.8.25"
  },
  "build": {
    "appId": "com.quickeruse.app",
    "productName": "QuickerUse",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "resources/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "QuickerUse"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "resources/icon.icns"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "resources/icon.png"
    }
  }
}
