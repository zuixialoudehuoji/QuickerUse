{
  "name": "quicker-use",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/main/index.js",
  "description": "A minimalist, mouse-first efficiency tool for Windows & Mac.",
  "author": "zuixianloudehuoji",
  "scripts": {
    "dev": "chcp 65001 && vite",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win -c.win.target=nsis",
    "build:win:portable": "vite build && electron-builder --win -c.win.target=portable",
    "build:win:dir": "vite build && electron-builder --win -c.win.target=dir",
    "build:win:all": "vite build && electron-builder --win -c.win.target=nsis -c.win.target=portable",
    "build:mac": "vite build && electron-builder --mac",
    "build:linux": "vite build && electron-builder --linux",
    "rebuild": "npx @electron/rebuild",
    "preview": "vite preview"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "element-plus": "^2.4.4",
    "highlight.js": "^11.11.1",
    "iconv-lite": "^0.7.1",
    "lowdb": "^7.0.1",
    "marked": "^17.0.1",
    "pinia": "^2.1.7",
    "qrcode": "^1.5.4",
    "robotjs": "^0.6.0",
    "tesseract.js": "^7.0.0",
    "vue": "^3.3.11"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@vitejs/plugin-vue": "^4.5.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "node-abi": "^4.24.0",
    "sass": "^1.69.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^1.8.25"
  },
  "build": {
    "appId": "com.quickeruse.app",
    "productName": "QuickerUse",
    "npmRebuild": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/MouseHook.exe",
        "to": "MouseHook.exe"
      },
      {
        "from": "resources/Bridge.exe",
        "to": "Bridge.exe"
      },
      {
        "from": "resources/CryptoCore.dll",
        "to": "CryptoCore.dll"
      },
      {
        "from": "resources/license.txt",
        "to": "license.txt"
      },
      {
        "from": "resources/disclaimer.txt",
        "to": "disclaimer.txt"
      },
      {
        "from": "resources/icon.png",
        "to": "icon.png"
      },
      {
        "from": "resources/icon-16.png",
        "to": "icon-16.png"
      },
      {
        "from": "resources/icon-disabled-16.png",
        "to": "icon-disabled-16.png"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.png",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "QuickerUse",
      "include": "resources/installer.nsh"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "resources/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "resources/icon.png"
    }
  }
}
